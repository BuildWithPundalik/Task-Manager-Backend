{
  "version": 2,
  "builds": [
    { "src": "api/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/auth/(.*)", "dest": "/api/auth" },
    { "src": "/api/auth", "dest": "/api/auth" },
    { "src": "/api/tasks/(.*)", "dest": "/api/tasks" },
    { "src": "/api/tasks", "dest": "/api/tasks" },
    { "src": "/api/health", "dest": "/api/health" },
    { "src": "/", "dest": "/api/index" },
    { "src": "/(.*)", "dest": "/api/index" }
  ]
}
